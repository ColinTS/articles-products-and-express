<h1>Edit the Article's Information</h1>
<h1>{{error}}</h1>

  <form method="POST" action="/articles/{{title}}?_method=PUT" enctype="application/x-www-form-urlencoded">
    <input type="text" name= "title" value= {{title}}>
    <input type="text" name= "body" value= {{body}}>
    <input type="text" name= "author" value= {{author}}>
    <br><br>
    <input type="submit" value="Submit">
  </form>

  <form method="POST" action="/articles/{{title}}?_method=DELETE" enctype="application/x-www-form-urlencoded">
    <input type="submit" value="Delete">
  </form>